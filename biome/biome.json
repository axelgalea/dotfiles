{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "space",
			"indentWidth": 2,
			"lineEnding": "lf",
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"trailingCommas": "all",
			"bracketSpacing": true,
			"bracketSameLine": true,
			"arrowParentheses": "asNeeded"
		}
	},
	"linter": {
		"rules": {
			"correctness": {
				"useExhaustiveDependencies": "info"
			},
			"suspicious": {
				"noExplicitAny": "info"
			},
			"style": {
				"useImportType": "warn"
			},
			"a11y": {
				"noSvgWithoutTitle": "off"
			}
		}
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	}
}
